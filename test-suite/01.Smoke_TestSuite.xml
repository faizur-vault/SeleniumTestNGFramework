<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="01.Smoke_TestSuite">
	<parameter name="suiteName" value="01.Smoke_TestSuite"/>
	<parameter name="headless" value="false"/>
	<listeners>
		<listener class-name="utilities.SuiteListener"></listener>
	</listeners>
	<test thread-count="3" name="Chrome">
		<parameter name="browserName" value="Chrome"/>
		<groups>
		<run>
			<include name="smoke"/>
		</run>
		</groups>
		<classes>
			<class name="module_LoginPage.TS_001_ValidateLoginCredentials"></class>
			<class name="module_LoginPage.TS_002_VerifyCancelLogin"></class>
		</classes>
	</test>
	<test thread-count="3" name="Firefox">
		<parameter name="browserName" value="Firefox"/>
		<groups>
		<run>
			<include name="smoke"/>
		</run>
		</groups>
		<classes>
			<class name="module_LoginPage.TS_001_ValidateLoginCredentials"></class>
			<class name="module_LoginPage.TS_002_VerifyCancelLogin"></class>
		</classes>
	</test> 
	<test thread-count="3" name="Edge">
		<parameter name="browserName" value="Edge"/>
		<groups>
		<run>
			<include name="smoke"/>
		</run>
		</groups>
		<classes>
			<class name="module_LoginPage.TS_001_ValidateLoginCredentials"></class>
			<class name="module_LoginPage.TS_002_VerifyCancelLogin"></class>
		</classes>
	</test> 
</suite> <!--
Suite -->
